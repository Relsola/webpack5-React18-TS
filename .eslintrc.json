{
    "settings": {
        "react": {
            // 自动检测 React 版本
            "version": "detect"
        }
    },
    "env": {
        // 设置环境为浏览器环境
        "browser": true
    },
    "extends": [
        // 使用 React 推荐的规则
        "plugin:react/recommended",
        // 使用 Airbnb 的 JavaScript 规范
        "airbnb-base",
        // 启用与 Prettier 规则的集成
        "prettier"
    ],
    // 使用 @typescript-eslint/parser 解析器解析 TypeScript 代码
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            // 启用对 JSX 的支持
            "jsx": true
        },
        // 使用 ECMAScript 2021 版本
        "ecmaVersion": 12,
        // 使用 ECMAScript 模块
        "sourceType": "module"
    },
    "plugins": [
        // 启用 React 相关的 ESLint 规则
        "react",
        // 启用 TypeScript 相关的 ESLint 规则
        "@typescript-eslint",
        // 启用 React Hooks 相关的 ESLint 规则
        "react-hooks",
        // 启用 Prettier 集成规则
        "prettier"
    ],
    "rules": {
        // 强制执行 React Hooks 规则
        "react-hooks/rules-of-hooks": "error",
        // 检查依赖项的完整性
        "react-hooks/exhaustive-deps": "warn",
        "prettier/prettier": [
            "error",
            {
                // 根据系统自动选择换行符
                "endOfLine": "auto"
            }
        ],
        // 禁止强制使用分号
        "semi": "off",
        // 允许使用尚未定义的变量和函数
        "no-use-before-define": "off",
        // 允许使用拖尾逗号
        "comma-dangle": "off",
        // 允许函数括号前的空格
        "space-before-function-paren": "off",
        // 允许多行的三元表达式
        "multiline-ternary": "off",
        // 允许对 Promise 参数的命名
        "promise/param-names": "off",
        // 允许使用 debugger 语句
        "no-debugger": "off",
        // 禁止要求定义 PropTypes
        "react/prop-types": "off",
        // 允许额外的括号
        "no-extra-parens": "off",
        // 允许文件末尾空行
        "eol-last": "off",
        // 允许在 JSX 中使用双引号或单引号
        "jsx-quotes": "off",
        // 允许块前的空格
        "space-before-blocks": "off",
        // 关闭行的最大长度限制
        "max-len": "off",
        // 不强制使用严格模式
        "strict": "off",
        // 允许在 Promise 构造函数的执行器中使用返回语句
        "no-promise-executor-return": "off",
        // 允许位运算符
        "no-bitwise": "off",
        // 允许在返回语句中进行赋值
        "no-return-assign": "off",
        // 允许在函数中有不同的返回方式
        "consistent-return": "off",
        // 允许在函数内部调用 require()
        "global-require": "off",
        // 允许导入外部依赖的模块
        "import/no-extraneous-dependencies": "off",
        // 允许导入未解析的模块
        "import/no-unresolved": "off",
        // 允许使用 console
        "no-console": "off",
        // 允许在导入语句中省略文件扩展名
        "import/extensions": "off",
        // 允许嵌套的三元表达式
        "no-nested-ternary": "off"
    }
}